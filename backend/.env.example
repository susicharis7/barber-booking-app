# Server
PORT=5000

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/barber_booking

# Firebase Admin (we'll set this up later)
FIREBASE_SERVICE_ACCOUNT_PATH=./src/firebase/firebase-service-account.json

# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY=your-private-key
# FIREBASE_CLIENT_EMAIL=your-client-email

# Frontend URL 
FRONTEND_URLS=http://localhost:3000,http://localhost:8081

NODE_ENV=development
PG_POOL_MAX=20
PG_IDLE_TIMEOUT_MS=30000
PG_CONN_TIMEOUT_MS=2000

# Alternative (for cloud deploy):
# FIREBASE_SERVICE_ACCOUNT_JSON={"project_id":"...","client_email":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"}
